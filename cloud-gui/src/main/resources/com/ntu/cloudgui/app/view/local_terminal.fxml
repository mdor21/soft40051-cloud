<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ntu.cloudgui.app.controller.LocalTerminalController"
      spacing="5">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextArea fx:id="outputArea" editable="false" prefRowCount="20"/>

    <HBox spacing="5">
        <TextField fx:id="commandField"
                   promptText="mv, cp, ls, mkdir, ps, whoami, tree, nano"/>
        <Button text="Run" onAction="#handleRun"/>
    </HBox>
</VBox>
