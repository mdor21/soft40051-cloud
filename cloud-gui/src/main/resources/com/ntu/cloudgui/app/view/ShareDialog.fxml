<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ntu.cloudgui.app.controller.ShareDialogController"
            headerText="Share File" prefWidth="400">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" promptText="Enter username to share with" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Permission:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <VBox spacing="5" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <fx:define>
                    <ToggleGroup fx:id="permissionGroup"/>
                </fx:define>
                <RadioButton fx:id="readPermissionRadio" text="Read-Only" toggleGroup="$permissionGroup" selected="true"/>
                <RadioButton fx:id="writePermissionRadio" text="Read/Write" toggleGroup="$permissionGroup"/>
            </VBox>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:id="okButton" text="Share" buttonData="OK_DONE"/>
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
