.root {
    -fx-font-family: "Segoe UI", "Roboto", sans-serif;
    -fx-background-color: linear-gradient(to bottom, #1c1f2a, #111319);
}

.card {
    -fx-padding: 20;
    -fx-background-color: #25293a;
    -fx-background-radius: 10;
    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.6), 10, 0, 0, 4);
}

.title {
    -fx-text-fill: #ffffff;
    -fx-font-size: 20px;
    -fx-font-weight: bold;
}

.top-bar {
    -fx-padding: 10;
    -fx-background-color: #202437;
}

.top-title {
    -fx-text-fill: #ffffff;
    -fx-font-size: 18px;
}

.side-bar {
    -fx-padding: 10;
    -fx-background-color: #181c2a;
}

.button {
    -fx-background-radius: 6;
    -fx-background-color: #3366ff;
    -fx-text-fill: white;
}

.button:hover {
    -fx-background-color: #4c7dff;
}

.text-field, .password-field, .text-area {
    -fx-background-color: #111319;
    -fx-text-fill: #ffffff;
    -fx-background-radius: 4;
    -fx-border-color: #444b6a;
}

.error-label {
    -fx-text-fill: #ff5555;
}
